@using CnxTaskManagement.Application.DTOs.Project
@using CnxTaskManagement.Application.DTOs.Task;
@using CnxTaskManagement.Application.Common;
@using CnxTaskManagement.Application.Common.Interfaces;
@model SearchResult<WorkTaskDto>
@{
    ProjectDto currentProject = ViewData["ProjectId"] as ProjectDto ?? new ProjectDto();
}

<dl class="row">
    <dt class="col-sm-2">
        โครงการ
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => currentProject.Name)
    </dd>
</dl>

<p>
    <a asp-action="Create" asp-route-id="@currentProject.Id" class="btn btn-primary btn-sm"><i class="fas fa-plus pr-1"></i>สร้างงาน</a>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title font-weight-bold">งานของโครงการ</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.data.First().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.data.First().Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.data.First().DueDateTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.data.First().CompleteDateTime)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.data)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DueDateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompleteDateTime)
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm"><i class="fas fa-pencil-alt"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    <a asp-controller="Project" asp-action="Index" class="btn btn-info btn-sm"><i class="fas fa-backward"></i></a>
</div>
